<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

    
<hibernate-mapping>
	<class name="com.codingraja.hibernate.domain.Product" table="PRODUCT_DETAILS">
		<id name="id" column="prod_id">
			<generator class="increment" />
		</id>
		<property name="name" column="prod_name" />
		<property name="model" column="prod_model" />
		<property name="brand" column="prod_brand" />
		<property name="price" column="prod_price" />
	</class>
</hibernate-mapping>